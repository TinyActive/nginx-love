{
  "name": "Nginx Love Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "typescript.tsdk": "node_modules/typescript/lib",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.associations": {
          "*.conf": "nginx"
        }
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "Prisma.prisma",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "forwardPorts": [
    3001,    // API backend
    8080,    // Frontend (Vite)
    8088,    // Nginx portal
    80,      // Nginx HTTP
    443,     // Nginx HTTPS
    5432,    // PostgreSQL
    5555     // Prisma Studio
  ],

  "portsAttributes": {
    "3001": {
      "label": "API Backend",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Frontend (Vite)",
      "onAutoForward": "openBrowser"
    },
    "8088": {
      "label": "Nginx Portal",
      "onAutoForward": "notify"
    },
    "80": {
      "label": "Nginx HTTP",
      "onAutoForward": "ignore"
    },
    "443": {
      "label": "Nginx HTTPS",
      "onAutoForward": "ignore"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "ignore"
    },
    "5555": {
      "label": "Prisma Studio",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "pnpm install && cd apps/api && pnpm prisma generate",

  "postStartCommand": "chown -R node:node /workspace 2>/dev/null || true",

  "remoteUser": "root",

  "mounts": [
    "source=pnpm-store,target=/home/node/.local/share/pnpm/store,type=volume"
  ]
}
