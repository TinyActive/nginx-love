# ==============================================
# Docker Compose Environment Configuration
# ==============================================
# Copy this file to .env and update the values below

# ==============================================
# Database Configuration
# ==============================================
DB_NAME=nginx_waf
DB_USER=postgres
DB_PASSWORD=change_this_strong_password_123!
DB_PORT=5432

# ==============================================
# Application Ports
# ==============================================
API_PORT=3001
WEB_PORT=8080
REDIS_PORT=6379

# ==============================================
# Environment
# ==============================================
NODE_ENV=production

# ==============================================
# JWT Configuration
# ==============================================
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-to-random-256-bit-key
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-to-random-256-bit-key
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# CORS Configuration (comma-separated origins)
# ==============================================
CORS_ORIGIN=http://localhost:8080,http://localhost:5173,http://YOUR_PUBLIC_IP:8080

# ==============================================
# Security
# ==============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key-change-this-to-random-256-bit-key
REDIS_PASSWORD=redis_strong_password_123!

# ==============================================
# 2FA Configuration
# ==============================================
TWO_FACTOR_APP_NAME=Nginx WAF Admin

# ==============================================
# SSL Configuration
# ==============================================
SSL_DIR=/etc/nginx/ssl
ACME_DIR=/var/www/html/.well-known/acme-challenge

# ==============================================
# SMTP Configuration
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-app-password

# ==============================================
# Frontend Configuration
# ==============================================
VITE_APP_NAME=Nginx ModSecurity Portal
VITE_APP_VERSION=1.0.0
VITE_SECRET_LOGIN_PATH=/portal-secret/login
VITE_API_URL=http://localhost:3001/api

# ==============================================
# Feature Flags
# ==============================================
VITE_ENABLE_SSO=true
VITE_ENABLE_2FA=true
VITE_ENABLE_AUTO_SSL=true

# ==============================================
# Monitoring
# ==============================================
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# ==============================================
# Session Configuration
# ==============================================
VITE_SESSION_TIMEOUT=3600

# ==============================================
# Demo Mode (set to false in production)
# ==============================================
VITE_DEMO_MODE=false